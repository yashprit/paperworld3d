<!-- Build assets for library1.  Note that all paths are defined
     relative to ${multi.dir} since we don't know what the current
     directory is in which Ant is running. -->
<project name="paperworld-core.assets">
    <dirname property="paperworld-core.assets.dir" file="${ant.file.paperworld-core.assets}"/>

    <!-- Define SWC exported by this library. -->
    <property name="paperworld.paperworld-core.swc" location="${paperworld-core.assets.dir}/${build.compc.dir}/paperworld-core.swc"/>

	<!-- Define library SWC files this library depends upon. -->		
	<property name="paperworld.datastructures.swc" location="${paperworld-core.assets.dir}/lib/datastructures.swc"/>
	<property name="paperworld.spring-as.swc" location="${paperworld-core.assets.dir}/lib/spring-actionscript.swc"/>
	<property name="paperworld.spring-as-resources.swc" location="${paperworld-core.assets.dir}/lib/springactionscript_resourceloading.swc"/>
	<property name="paperworld.moccasin.swc" location="${paperworld-core.assets.dir}/lib/moccasin-core.swc"/>

</project>
