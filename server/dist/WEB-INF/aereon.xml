<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE beans PUBLIC "-//SPRING//DTD BEAN//EN" "http://www.springframework.org/dtd/spring-beans.dtd">
<beans>
	
	<bean id="paperworld.service" class="com.paperworld.core.PaperworldService" init-method="init">
		<property name="application">
			<ref bean="web.handler"/>
		</property> 
		<property name="zones">
			<map>
				<entry key="spacezone"><ref bean="spacezone"/></entry>
			</map>
		</property>
	</bean>
		
	<bean id="spacezone" class="com.paperworld.zone.Zone">
		<property name="name" value="spacezone"/>
		<property name="persistent" value="false"/>
		<property name="service">
			<ref bean="paperworld.service"/>
		</property>
		<property name="npc">
			<map>
				<entry key="A"><ref bean="enemy"/></entry>
			</map>
		</property>
	</bean>
	
	<bean id="spacecraft.behaviour" 
		class="com.paperworld.avatar.behaviour.SpacecraftBehaviour"
		singleton="false" />
		
	<bean id="missile.behaviour"
		class="com.paperworld.avatar.behaviour.MissileBehaviour"
		singleton="false" />
		
	<bean id="wander.behaviour" 
		class="com.paperworld.ai.steering.behaviour.Wander" 
		singleton="false" >
		<property name="character">
			<ref bean="starfighter"/>
		</property>
	</bean>
		
	<bean id="enemy" 
		class="com.paperworld.games.objects.StarFighter">
		<property name="id" value="A"/>
		<property name="x" value="0.0"/>
		<property name="y" value="-250.0"/>
		<property name="z" value="1000.0"/>
		<property name="behaviour">
			<ref bean="wander.behaviour"/>
		</property>
	</bean>
	
	<bean id="starfighter" 
		class="com.paperworld.games.objects.StarFighter"
		singleton="false">
		<property name="behaviour">
			<ref bean="spacecraft.behaviour"/>
		</property>
	</bean>
	
	<bean id="missile" class="com.paperworld.games.objects.Missile"
		singleton="false">
		<property name="behaviour">
			<ref bean="missile.behaviour"/>
		</property>
	</bean>
	
	<bean id="player" 
		class="com.paperworld.core.player.Player" 
		singleton="false">
		<property name="avatar">
			<ref bean="starfighter"/>
		</property>
	</bean>
		
</beans>